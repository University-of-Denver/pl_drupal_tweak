{#
/**
 * @file
 * Theme override for the basic structure of a single Drupal page.
 *
 * Variables:
 * - logged_in: A flag indicating if user is logged in.
 * - root_path: The root path of the current page (e.g., node, admin, user).
 * - node_type: The content type for the current node, if the page is a node.
 * - head_title: List of text elements that make up the head_title variable.
 *   May contain one or more of the following:
 *   - title: The title of the page.
 *   - name: The name of the site.
 *   - slogan: The slogan of the site.
 * - page_top: Initial rendered markup. This should be printed before 'page'.
 * - page: The rendered page markup.
 * - page_bottom: Closing rendered markup. This variable should be printed after
 *   'page'.
 * - db_offline: A flag indicating if the database is offline.
 * - placeholder_token: The token for generating head, css, js and js-bottom
 *   placeholders.
 *
 * @see template_preprocess_html()
 */
#}
{% set site_url = url("<current>") %}

<!DOCTYPE html>
<html{{ html_attributes }}>
<head>
    {# Temporarily loading each termly script here to help it appear first #}
    {% if 'grandchallenges.du.edu' in site_url|render|render %}
        <script data-cfasync="false" src="https://app.termly.io/resource-blocker/465cdd30-8588-4cdf-ba9c-2e576879e372?autoBlock=on" async></script>
    {% elseif 'inauguration.du.edu' in site_url|render|render %}
        <script data-cfasync="false" src="https://app.termly.io/resource-blocker/4f109d43-096e-4587-8fde-64cc83127974?autoBlock=on" async></script>
    {% elseif 'why.du.edu' in site_url|render|render %}
        <script data-cfasync="false" src="https://app.termly.io/resource-blocker/68ec04b6-6154-4fd9-9dba-34667c189a07?autoBlock=on" async></script>
    {% endif %}
    <head-placeholder token="{{ placeholder_token }}">
        <title>{{ head_title|safe_join(' | ') }}</title>
        <css-placeholder token="{{ placeholder_token }}">
        <js-placeholder token="{{ placeholder_token }}">

</head>


<body {{ attributes.addClass('micro') }}>
<p class="show-on-focus">
    <a href="#main-content">Skip to Content</a></p>
<div class="off-canvas-wrap">
    {{ page_top }}
    {{ page }}
    {{ page_bottom }}
</div>

<js-bottom-placeholder token="{{ placeholder_token|raw }}">

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.2.2/isotope.pkgd.min.js" type="text/javascript"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/2.1.0/jquery.scrollTo.min.js"></script>
{#<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js" type="text/javascript"></script>#}

</body>
</html>
