{% embed "@organisms/stories.twig" %}

    {% if related_stories|length < 3 %}
        {% set layout = 'two_col' %}
    {% else %}
        {% set layout = 'three_col' %}
    {% endif %}
    {% set col_header = {
        "title": content.field_heading|field_value,
        "type": "h3",
        "cssClass": "btm-divider"
    } %}
    {% block stories %}
        {% for story in related_stories %}
            {{ story }}
        {% endfor %}
    {% endblock %}

{% endembed %}
