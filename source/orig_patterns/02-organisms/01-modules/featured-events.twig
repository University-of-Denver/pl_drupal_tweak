<div class="featured-events-module">
    <div class="row">
        {% if not hide_calendar_link %}
            <!-- Optional Link to Calendar -->
            <div class="columns small-12">
                <p class="featured-events__calendar-link"><a href="#">Go to Events Calendar</a></p>
            </div>
        {% endif %}
        <div class="columns small-12">
            <div class="orbit" role="region" aria-label="Favorite Space Pictures" data-auto-play="false" data-orbit="data-orbit">
                <div class="orbit-container">
                    <button class="orbit-previous">
                        <span class="show-for-sr">Previous Slide</span><span class="icon-du-left-arrow" aria-hidden="true"></span>
                    </button>
                    <button class="orbit-next">
                        <span class="show-for-sr">Next Slide</span><span class="icon-du-right-arrow" aria-hidden="true"></span>
                    </button>
                    {% for slide_item in slides %}
                        <div class="orbit-slide{% if slide_item.is_active %} is-active{% endif %}">
                            <div class="row">
                                <div class="columns small-12 medium-12 large-6">
                                    {% include "@atoms/image.twig" with slide_item %}
                                </div>
                                <div class="columns small-12 medium-12 large-6">
                                    <div class="featured-events__content">
                                        <p class="featured-events__date">{{ slide_item.date }}</p>
                                        {% if headline %}
                                            {% include "@atoms/headline.twig" with slide_item.headline %}
                                        {% endif %}
                                        {% include "@atoms/paragraph.twig" with slide_item %}
                                        <ul class="featured-events__details">
                                            {% for details in slide_item.details %}
                                                <li>{#{% include "@atoms/_du-icon.twig" with details.icon_name %}#} {{ details.detail_text }}</li>
                                            {% endfor %}
                                        </ul>
                                        {% if slide_item.button %}
                                            <p class="btn-wrap">{% include "@atoms/button.twig" with slide_item.button %}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- Assuming it's best if these are generated by the table transformation, assuming that is what will be used? -->
                <nav class="orbit-bullets">
                    <button class="is-active" data-slide="0">
                        <span class="show-for-sr">First slide details.</span><span class="show-for-sr">Current Slide</span>
                    </button>
                    <button data-slide="1"><span class="show-for-sr">Second slide details.</span></button>
                    <button data-slide="2"><span class="show-for-sr">Third slide details.</span></button>
                    <button data-slide="3"><span class="show-for-sr">Fourth slide details.</span></button>
                </nav>
            </div>
        </div>
    </div>
</div>