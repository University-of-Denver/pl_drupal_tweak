{% include "organisms-push-menu" %}

<div class="off-canvas-content" id="off-canvas-content" data-off-canvas-content>

	{% include "organisms-header" %}
	
	<article id="main-content" role="main">
		
		<div class="row">
			<div class="columns large-offset-4 large-8 pull-up page-title-band">
				{% if page_title %}
				{% include "atoms-headline" %}
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="columns small-12 large-3 pull-up">
				{% if sub_menu %}
				{% include "molecules-sub-nav" %}
				{% endif %}
			</div>
			<div class="columns small-12 large-8 large-offset-1 intro">
				<h2>This is an H2</h2>
				{% if pre_hide %}
				{% include "atoms-paragraph" %}
				{% endif %}
				{% include "molecules-show-hide-toggle" %}
				{% if post_hide %}
				{% include "atoms-paragraph" %}
				{% endif %}
			</div>
		</div>
		<form class="buffer-on-inner-row">
			<div class="row">
				<div class="columns small-12">
					{% if not success_message %}
						<div class="du-form__alert du-form__alert-error">Please fill in required fields below.</div>
					{% endif %}
					{% if success_message %}
						<p class="du-form__success">Success! This is a message after someone submits.</p>
					{% endif %}
				</div>
			</div>
			<div class="row">
				{% if not success_message %}
					{% if two_col_inputs %}
						<div class="columns small-12 medium-6">
							{% include "atoms-input" %}
						</div>
					{% endif %}
					<div class="columns small-12">
						{% include "atoms-input(error: true" %}
					</div>
					<div class="columns small-12">
						{% include "atoms-select" %}
					</div>
					<div class="columns small-12">
						{% include "atoms-select(multiple: true" %}
					</div>
					<div class="columns small-12">
						{% include "atoms-textarea" %}
					</div>
					{% if radios_and_checkboxes %}
						<fieldset class="small-12 large-6 columns">
							<legend>Choose Your Favorite</legend>
							<input type="radio" name="pokemon" value="Red" id="pokemonRed" required="true" /><label for="pokemonRed">Red</label>
							<input type="radio" name="pokemon" value="Blue" id="pokemonBlue" /><label for="pokemonBlue">Blue</label>
							<input type="radio" name="pokemon" value="Yellow" id="pokemonYellow" /><label for="pokemonYellow">Yellow</label>
						</fieldset>
						<fieldset class="small-12 large-6 columns">
							<legend>Check these out</legend>
							<input id="checkbox1" type="checkbox" /><label for="checkbox1">Checkbox 1</label>
							<input id="checkbox2" type="checkbox" /><label for="checkbox2">Checkbox 2</label>
							<input id="checkbox3" type="checkbox" /><label for="checkbox3">Checkbox 3</label>
						</fieldset>
					{% endif %}
					<div class="columns small-12">
						<fieldset class="fieldset">
						  <legend>Check these out</legend>
						  <input id="checkbox12" type="checkbox" /><label for="checkbox12">Checkbox 1</label>
						  <input id="checkbox22" type="checkbox" /><label for="checkbox22">Checkbox 2</label>
						  <input id="checkbox32" type="checkbox" /><label for="checkbox32">Checkbox 3</label>
						</fieldset>
					</div>
					<div class="columns small-12">
						<label>Password
						  <input type="password" aria-describedby="passwordHelpText" />
						</label>
						<p class="help-text" id="passwordHelpText">Your password must have at least 10 characters, a number, and an Emoji.</p>
					</div>
					<div class="columns small-12">
						<button type="submit" id="formSubmitExample" class="btn">Submit</button>
					</div>
				{% endif %}
			</div>
		</form>


	</article>
	
	{% include "organisms-footer" %}

</div>
