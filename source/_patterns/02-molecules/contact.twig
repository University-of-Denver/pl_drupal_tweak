<div class="columns">
    <div class="contacts-module__content" data-equalizer-watch="contacts-module__content">
        {% include "@atoms/headline.twig" with contact %}
        <div class="contacts-module__hidden-on-small">
            {% if not contact.text %}
                &nbsp;
            {% else %}
                {% include "@atoms/paragraph.twig" with contact %}
            {% endif %}
            <ul class="contact-list">
                {% if contact.email %}
                    <li>
                        <div class="contact-list__media"><span class="icon-du-mail-alt" aria-hidden="true"></span></div>
                        <a href="mailto:{{ contact.email }}" title="Contact Email">{{ contact.email }}</a></li>
                {% endif %}
                {% if contact.phone %}
                    <li class="show-for-small-only">
                        <div class="contact-list__media"><span class="icon-du-phone" aria-hidden="true"></span></div>
                        <a href="tel:{{ contact.phone }}">{{ contact.phone }}</a></li>
                    <li class="hide-for-small-only non-link">
                        <div class="contact-list__media"><span class="icon-du-phone" aria-hidden="true"></span>
                        </div><a href="tel:{{ contact.phone }}">{{ contact.phone }}</a></li>
                {% endif %}
                {% if contact.fax %}
                    <li class="show-for-small-only">
                        <div class="contact-list__media"><span class="icon-du-fax" aria-hidden="true"></span></div>
                        <a href="fax:{{ contact.fax }}">{{ contact.fax }}</a></li>
                    <li class="hide-for-small-only non-link">
                        <div class="contact-list__media"><span class="icon-du-fax" aria-hidden="true"></span>
                        </div> {{ contact.fax }}</li>
                {% endif %}
                {% if contact.url %}
                    <li>
                        <div class="contact-list__media"><span class="icon-du-link-ext-alt" aria-hidden="true"></span>
                        </div>
                        <a href="{{ contact.url }}"
                        title="{{ contact.alt_text|e('html_attr') }}"
                        {% if contact.target %}target="{{ contact.target|e('html_attr') }}"{% endif %}
                        {% if contact.onclick %}onclick="{{ contact.onclick|e('html_attr') }}"{% endif %}>{{ contact.url_text }}</a>
                    </li>
                {% endif %}
                {% if contact.building %}
                    <li>
                        <div class="contact-list__media"><span class="icon-du-location" aria-hidden="true"></span></div>
                        {% if contact.address1 %}
                            {% if contact.address1 %}
                                <a href="https://www.google.com/maps/place/{{ contact.address1|render|replace({' ': '+'}) }}+{{ contact.city }}+{{ contact.state }}+{{ contact.postalcode }}"
                                   target="_blank"
                                {% if contact.building %}title="{{ contact.building }}"{% endif %}>{{ contact.building }}</a>
                            {% endif %}
                            {% if not contact.address1 %}
                                {{ contact.building }}
                            {% endif %}
                        {% endif %}
                        {% if not contact.address1 %}
                            {{ contact.building }}
                        {% endif %}
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
