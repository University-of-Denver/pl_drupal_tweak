<div class="key-faculty {% if layout == 'one_col' %}key-faculty-one-col{% endif %}{% if container %} {{ container }}{% endif %}" data-equalizer="profiles-module__content" data-equalize-on-row="true" data-resize="profiles-module__content" data-mutate="profiles-module__content" data-events="mutate">
    <div class="row component-header">
        <div class="columns small-12">
            {% if headline %}
            {% include "@atoms/headline.twig" with col_header %}
            <div class="divider">&nbsp;</div>
            {% endif %}
        </div>
    </div>
    {% if profile_list_url %}
        {% if headline %}
        <div class="view-all-profiles">
             {% include "@atoms/link.twig" with profile_list_url %}
        </div>
        {% endif %}
    {% endif %}
    <div class="row-key-faculty small-up-1 medium-up-2 large-up-3">
        {% if profiles %}
            <div class="component-container">
                {% if profiles_length == 1 %}
                    <div class="{{ layout }} {{ row }} faculty-container">
                {% endif %}
                <div class="row{% if profiles_length != 1 %} full-background{% endif %}">
                    {% block profiles %}
                        {% for profile in profiles %}
                            <div class="key-profile-background {{ column_classes }}">
                                {{ profile }}
                            </div>
                        {% endfor %}
                    {% endblock %}
                </div>
                {% if profiles_length == 1 %}
                    </div>
                {% endif %}
            </div>
            {% if layout == 'one_col' %}
                <div class="background-container background-container-{{ layout }}-{{ row }}">&nbsp;</div>
            {% endif %}
        {% endif %}
    </div>
</div>
