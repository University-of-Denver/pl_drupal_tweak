{% if tmode == "large_image_left" %}
    <div class="feature-video-module no-popup buffer-on-inner-row testimonial-blockquote">
        {% if blockquote %}
            {% include "@organisms/blockquote-testimonial.twig" with blockquote %}
        {% endif %}
        <div class="row media">
            <div class="columns small-12 medium-12 large-8">
                <div class="feature-video-module__video-wrapper media-wrapper">
                    {% if is_image %}
                        {% include "@atoms/image.twig" with image %}
                    {% else %}
                    {% if is_youtube %}
                        {% embed "@atoms/YouTube.twig" %}
                            {% block youtube_embed %}
                                {{ youtube_embed }}
                            {% endblock %}
                        {% endembed %}
                        {% elseif video_upload %}
                            <a href="#" class="video-toggle show-for-large">
                                <span class="video-toggle__text">
                                    <span class="show-for-sr">Play/Pause Video</span>
                                    {% for icon in play_pause_icons %}
                                        {% include "@atoms/_du-icon.twig" with icon %}
                                    {% endfor %}
                                    {{ play_label }}
                                </span>
                            </a>
                            {% include "@atoms/video.twig" with video_upload %}
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endif %}

