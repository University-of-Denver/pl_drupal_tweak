<article{{ attributes.addClass("resource") }} id="main-content" role="main" >
    <div class="row">
        <div class="columns large-offset-4 large-8 pull-up page-title-band">
            {% block page_title %}
                {% include "@atoms/headline.twig" with {'title' : title, 'type' : 'h1'} %}
            {% endblock %}
        </div>
    </div>
    <div class="row">
        <div class="columns small-12 large-3 pull-up author">
            <a onclick="history.back()" class="sub-menu__back-link"><span class="icon-du-left-arrow" aria-hidden="true"></span>{{ back_link_text }}</a>
            <script>
                // If the user came from a different site or has referrer clicking the back button will take them to the default listing page
                if (document.referrer === '' || document.referrer.search('du.edu') === -1) {
                    document.querySelector('.sub-menu__back-link').onclick = function(e) {
                        window.location.href = '{{ back_link }}';
                    }
                }
            </script>
            <div class="add-this">
                <!-- Go to www.addthis.com/dashboard to customize your tools -->
                <div class="addthis_inline_share_toolbox"></div>
            </div>

            <div class="article-overview">
                {% if publishing_body %}
                    <div class="row pub-body">
                        <div class="large-12 title">{{ publishing_body_label }}</div>
                        <div class="large-12">{{ publishing_body }}</div>
                    </div>
                {% endif %}

                {% if owning_units and (hide_owning_units == 0) %}
                    <div class="row owning-unit">
                        <div class="large-12 title">Owning Unit(s)</div>
                        <div class="large-12">{{ owning_units }}</div>
                    </div>
                {% endif %}

                {% if assoc_units and (hide_assoc_units == 0) %}
                    <div class="row assoc-unit">
                        <div class="large-12 title">Associated Unit(s)</div>
                        <div class="large-12">{{ assoc_units }}</div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="columns small-12 large-8 large-offset-1 intro">
            {% if type %}
                <p class="row type">
                    {{ type }}
                </p>
            {% endif %}

            <p class="row author">
                <a href="{{ author_uri }}">
                    {{ first_name }} {{ last_name }}
                </a>
            </p>

            {% if pub_date %}
                <p class="row pub-date">
                    {{ pub_date }}
                </p>
            {% endif %}

            {% if res_link or scholar_link %}
                <p class="row">
                    {% if res_link %}
                        {% include "@atoms/button.twig" with {
                            "icon": false,
                            "before": true,
                            "url": res_link,
                            "title": res_title,
                            "altClass": "btn--small",
                            "target": res_target
                        } %}
                    {% endif %}

                    {% if scholar_link %}
                        {% include "@atoms/button.twig" with {
                            "icon": false,
                            "before": true,
                            "url": scholar_link,
                            "title": scholar_title,
                            "altClass": "btn--small scholar-link",
                            "target": scholar_target
                        } %}
                    {% endif %}
                </p>
            {% endif %}
            {% if short_description %}
                <p class="row short-desc">
                    {{ short_description }}
                </p>
            {% endif %}

            {% if abstract %}
                <div class="row abstract">
                    {{ abstract }}
                </div>
            {% endif %}

            {% if keywords %}
                <div class="row keywords">
                    Keywords: {{ keywords }}
                </div>
            {% endif %}

            {% if locations %}
                <div class="row locations">
                    Locations: {{ locations }}
                </div>
            {% endif %}
        </div>
    </div>
</article>

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-58ff759bdd589ba5"></script>
