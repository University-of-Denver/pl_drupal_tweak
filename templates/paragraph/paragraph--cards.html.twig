{% embed "@organisms/cards.twig" %}
    {% set cards = content.field_cards|field_value %}
    {# Alignment - User assigned Alignment, if None then default to Left #}
    {% set alignment = content.field_card_alignment|field_value == null ? 'Left' : content.field_card_alignment|field_value %}
    {% if cards|length < 3 %}
        {% set layout = 'two_col' %}
    {% else %}
        {% set layout = 'three_col' %}
    {% endif %}

    {% set col_header = {
        "title": content.field_heading|field_value,
        "type": "h3",
        "cssClass": "btm-divider"
    } %}
    {% block cards %}
        {% for card in cards %}
            {{ card }}
        {% endfor %}
    {% endblock %}
{% endembed %}

