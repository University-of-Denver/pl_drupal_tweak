{% embed "@organisms/homepage-academics-search.twig" %}
    {% set headline_title = content.field_hps_heading|field_value %}
    {% set placeholder = content.field_hps_placeholder|field_value %}
    {% if content.field_hps_button_1|field_value %}
        {% set button1 = {
        title: content.field_hps_button_1|field_raw('title'),
        onclick: content.field_hps_button_1.0['#options']['attributes']['onClick'],
        action: content.field_hps_button_1[0]['#url']
        } %}
    {% endif %}
    {% if content.field_hps_button_2|field_value %}
        {% set button2 = {
        title: content.field_hps_button_2|field_raw('title'),
        onclick: content.field_hps_button_2.0['#options']['attributes']['onClick'],
        action: content.field_hps_button_2[0]['#url']
        } %}
    {% endif %}
{% endembed %}