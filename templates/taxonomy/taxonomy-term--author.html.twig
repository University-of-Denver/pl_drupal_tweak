{#
/**
 * @file
 * Default theme implementation to display a taxonomy term.
 *
 * Available variables:
 * - url: URL of the current term.
 * - name: Name of the current term.
 * - content: Items for the content of the term (fields and description).
 *   Use 'content' to print them all, or print a subset such as
 *   'content.description'. Use the following code to exclude the
 *   printing of a given child element:
 *   @code
 *   {{ content|without('description') }}
 *   @endcode
 * - attributes: HTML attributes for the wrapper.
 * - page: Flag for the full page state.
 * - term: The taxonomy term entity, including:
 *   - id: The ID of the taxonomy term.
 *   - bundle: Machine name of the current vocabulary.
 * - view_mode: View mode, e.g. 'full', 'teaser', etc.
 *
 * @see template_preprocess_taxonomy_term()
 *
 * @ingroup themeable
 */
#}
<div{{ attributes }}>
    {% embed "@organisms/author.twig" %}
        {% set name = name['#object'].getName() %}
        {% set title = content.field_author_title|field_value %}
        {% set email = content.field_author_email|field_value %}
		{% set email_url = "mailto:" ~ content.field_author_email.0['#context']['value'] %}
        {% set phone = content.field_author_phone|field_value %}
		{% set phone_url = "tel:" ~ content.field_author_phone.0['#context']['value'] %}
        {% set photo = content.field_author_photo|field_value %}
        {% if content.field_author_facebook_profile|field_value %}
            {% set facebook = {
                "icon_class": "facebook",
                "title": content.field_author_facebook_profile|field_raw('title'),
                "alt_text": content.field_author_facebook_profile.0['#options']['attributes']['title'],
                "onclick": content.field_author_facebook_profile.0['#options']['attributes']['onClick'],
                "url": content.field_author_facebook_profile.0['#url'],
                "target": content.field_author_facebook_profile.0['#options']['attributes']['target']
            }%}
        {% endif %}
        {% if content.field_author_linkedin_profile|field_value %}
            {% set linkedin = {
                "icon_class": "linkedin",
                "title": content.field_author_linkedin_profile|field_raw('title'),
                "alt_text": content.field_author_linkedin_profile.0['#options']['attributes']['title'],
                "onclick": content.field_author_linkedin_profile.0['#options']['attributes']['onClick'],
                "url": content.field_author_linkedin_profile.0['#url'],
                "target": content.field_author_linkedin_profile.0['#options']['attributes']['target']
            }%}
        {% endif %}
        {% if content.field_author_twitter_profile|field_value %}
            {% set twitter = {
                "icon_class": "twitter",
                "title": content.field_author_twitter_profile|field_raw('title'),
                "alt_text": content.field_author_twitter_profile.0['#options']['attributes']['title'],
                "onclick": content.field_author_twitter_profile.0['#options']['attributes']['onClick'],
                "url": content.field_author_twitter_profile.0['#url'],
                "target": content.field_author_twitter_profile.0['#options']['attributes']['target']
            }%}
        {% endif %}
    {% endembed %}
</div>
